section-margin = 100px

body-font(size, weight = 100)
	font weight size "Helvetica Neue", Helvetica, Arial, sans-serif

global-reset()

body
	background #fff
	color #444
	font 400 14px/1.6 "Open Sans", sans-serif

nav
	position fixed
	top 0
	left 0
	width 100%
	font-size 12px
	background rgba(255, 255, 255, .97)
	border-bottom 1px solid #ccc
	box-shadow 0 1px 3px #eee

	ul
		padding 1em
		text-align right

	li
		display inline-block

	a
		padding .5em 1em
		color #777
		text-decoration none

		&:hover
			text-decoration underline

		&.selected
			font-weight bold
			color #222

#index nav
	border 0
	box-shadow none

header
	margin 2em
	padding section-margin
	padding-right 300px
	background url(mysql_logo.png) right center no-repeat
	border-left 1px solid #eee

nav + header
	margin-top 5%

section
	padding section-margin

h1
	body-font(60px, 400)
	color #353535

h2
	body-font(60px)

h3
	margin 2em 0 .5em
	body-font(30px)
	letter-spacing .1em

h4
	margin 2em 0 .5em
	body-font(18px, 400)
	letter-spacing .1em

a
	color #4183C4

p
	padding .5em 0

pre
	color #353535
	font-size 14px
	line-height 1.4
	margin 20px 0
	padding 20px
	background #fff
	border 1px solid #e7e7e7;
	border-bottom 1px solid #ddd
	box-shadow 0 1px 3px 0 #eee
	border-radius 3px

	code
		font-family monaco, monospace
		font-size .8em

code
	.keyword
		color #8a6343

	.string
		color #5890ad

	.number
		color #2f6fad

	.comment
		color #888

p code, ul code
	padding 2px 8px
	font-family monaco, monospace
	font-size .75em
	background #efefef
	border 1px solid #eaeaea
	border-radius 3px
